
{:source-paths ["src" "polyfill"]
 :dependencies [[mvc-works/hsl          "0.1.2"]
                [mvc-works/shell-page   "0.1.6"]
                [mvc-works/verbosely    "0.1.2"]
                [respo/ui               "0.3.1"]
                [respo                  "0.8.12"]]
 :open-file-command ["subl" ["%s:%s:%s" :file :line :column]]
 :builds {:browser {:target :browser
                    :output-dir "target/browser"
                    :asset-path "/browser"
                    :modules {:main {:entries [respo-markdown.main]
                                     :depends-on #{:lib}}
                              :lib {:entries [respo.core respo.macros
                                              respo.comp.inspect]}}
                    :devtools {:after-load respo-markdown.main/reload!
                               :preloads [shadow.cljs.devtools.client.hud]
                               :http-root "target"
                               :http-port 8081}
                    :release {:output-dir "dist/"
                              :module-hash-names true
                              :build-options {:manifest-name "cljs-manifest.json"}
                              :compiler-options {:externs ["externs/hljs.js"]}}}
          :ssr {:target :node-script
                :output-to "target/ssr.js"
                :main respo-markdown.render/main!
                :devtools {:after-load respo-markdown.render/main!}}}}
